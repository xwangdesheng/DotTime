<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_page"
    app:startDestination="@id/action_albums">

    <fragment
        android:id="@+id/action_images"
        android:name="com.gleaners.dottime.fragment.ImagesFragment"
        >

        <action
            android:id="@+id/action_images_to_action_albums"
            app:destination="@id/action_albums" />

    </fragment>
    <fragment
        android:id="@+id/action_albums"
        android:name="com.gleaners.dottime.fragment.AlbumsFragment">

        <action
            android:id="@+id/action_albums_to_action_images"
            app:destination="@id/action_images" />
    </fragment>

</navigation>